@inherits LayoutComponentBase



<MudThemeProvider/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Style="background:rgb(30,30,30);">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudContainer Class="logo-container" Style="padding: 0;height: 100%;">
            <MudNavLink Href="/" Match="NavLinkMatch.All" Style="width:fit-content;height:inherit;margin-left:0; ">
                <MudImage Src="./Images/logo/neoxLogoWhite.svg" Alt="neox Logo" ObjectFit="ObjectFit.Cover"></MudImage>
            </MudNavLink>
        </MudContainer>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2" Style="color:black;background-color:white;">
        <MyNavMenu>

        </MyNavMenu>
    </MudDrawer>
    <MudMainContent Style="background:whitesmoke; height:100vh">
        @Body
    </MudMainContent>
</MudLayout>


@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}

