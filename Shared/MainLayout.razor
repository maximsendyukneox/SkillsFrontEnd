@inherits LayoutComponentBase



<MudThemeProvider @bind-IsDarkMode="@isDarkMode" Theme="@neoxTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudDrawer uid="app_drawer" @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Never" Elevation="2" Style="height:100vh;" Color="Color.Primary">
        <MyNavMenu @bind-IsDarkMode="@isDarkMode">
        </MyNavMenu>
    </MudDrawer>
    <MudMainContent Style="height:100vh; padding:0;">
        @Body
    </MudMainContent>
</MudLayout>


@code {
    bool _drawerOpen = true;
    bool isDarkMode;

    MudTheme neoxTheme = new MudTheme()
        {
            Palette = new PaletteLight()
            {
                Primary = new("#4b7396"), // #243246 dunkles neox blau
                Secondary = new("#4b7396"), // #4b7396 helles neox blau
                Tertiary = new("#DDE6ED"),
                AppbarBackground = Colors.Red.Default
            },
            PaletteDark = new PaletteDark()
            {
                Primary = new("#121212"), // vordergrund
                Secondary = new("#121212"), // hintergrund
                Tertiary = new("#535353"), // 
                AppbarBackground = Colors.Brown.Darken1
            },
            Typography = new Typography()
            {
                Default = new Default()
                {
                    FontFamily = new[] {"Roboto","Poppins", "sans-serif" }
                }
            }

        };

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}

