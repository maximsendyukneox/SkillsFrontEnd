@using SkillsDatabase

<table>
    <thead>
        <tr>
            <th>Kenntnis</th>
            <th>Stufe</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < NumberOfSkills; i++)
        {
            
            <tr>
                <td>
                    
                    <br/>


                    <input type="text" @bind-value="skillLevelInputListParameter.Item1[i]" />
                     
                </td>
                <td>
                    <select >
                        @foreach (var l in Enum.GetValues(typeof(ProficiencyLevel)))
                        {
                            <option value="@l">@l</option>
                        }
                    </select>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {


    [Parameter]
    public int NumberOfSkills { get; set; }
    [Parameter]
    public Tuple<List<String?>, List<ProficiencyLevel>> skillLevelInputListParameter { get; set; }

    string text;

    string[] s = new string[3];

    private Task SetAsync(string value) {  StatischeKlasse.setInput(value); return Task.CompletedTask; }

    private string GetValue { get { return StatischeKlasse.getInput(); } }

}


