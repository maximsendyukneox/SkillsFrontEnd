@using SkillsBackend.Model

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Warning" Class="mr-3 mb-n1"/>
            Achtung
        </MudText>
    </TitleContent>
    <DialogContent>
            <MudText uid="msgBox_message">Gewählte Kenntnis "@Skill" nicht hinzugefügt. Kenntnis speichern?</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton uid="btn_cancelNotAddedSkill" OnClick="Cancel">Verwerfen</MudButton>
        <MudButton uid="btn_saveNotAddedSkill" Color="Color.Secondary" OnClick="AddProficiency" >Speichern</MudButton>
    </DialogActions>
</MudDialog>


@code {

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public string Skill { get; set; }

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void AddProficiency()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }
}
